<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Fragment.OrderSuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:orientation="vertical"
        android:background="#FF5722"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="70sp"
            android:text="Đặt hàng thành công !"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="serif" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_chi_tiet_don_hang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_weight="0.5"
            android:textSize="16sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:backgroundTint="#FF5722"
            android:typeface="serif"
            android:text="Chi tiết\nđơn hàng"/>
        <Button
            android:id="@+id/btn_home"
            android:layout_weight="0.5"
            android:layout_marginEnd="8sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:backgroundTint="#FF5722"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Quay lại\ntrang chủ"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="20sp"
        android:typeface="serif"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có thể bạn cũng thích "
        android:gravity="center"
        android:textColor="#F40000"
        android:textSize="14dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:id="@+id/rv_sp_tuongtu"/>




</LinearLayout>