<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
   android:background="#dddaaf"
    app:cardElevation="3dp"
    android:id="@+id/chitiet"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:clickable="true"
        android:id="@+id/ln_chitiet"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:padding="8sp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="95sp"
                        android:layout_height="95sp"
                        android:layout_gravity="center"
                        android:contentDescription="here"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bovuong">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            android:layout_gravity="center"
                            android:contentDescription="here"
                            android:paddingLeft="2dp"
                            android:scaleType="fitCenter"
                            android:paddingRight="2dp"
                            android:src="@drawable/butchi12mau" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginEnd="10sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">



                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:layout_marginStart="5dp"
                            android:text="Xà bông sinh học Giảm mụn lưng"
                            android:typeface="serif"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:padding="3sp"
                            android:paddingTop="2dp"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:layout_marginStart="5dp"
                            android:text="x1"
                            android:layout_gravity="end"
                            android:typeface="serif"
                            android:textSize="14sp"
                            />
                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name">

                            <TextView
                                android:id="@+id/tv_price_old"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:foreground="@drawable/strikethrough"
                                android:text="32.000 đ"
                                android:textColor="#A6A1A1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:text="18.000 đ"
                                android:gravity="end"
                                android:textColor="#FF0000"
                                android:textSize="14dp" />


                        </LinearLayout>







                    </LinearLayout>



                    <!--               <ImageView-->
                    <!--                    android:id="@+id/clear"-->
                    <!--                    android:layout_width="20dp"-->
                    <!--                    android:layout_height="20dp"-->
                    <!--                    android:layout_weight="0.05"-->
                    <!--                    android:clickable="true"-->
                    <!--                    android:layout_marginStart="28dp"-->
                    <!--                    android:background="@drawable/ic_baseline_clear_24"-->
                    <!--                     />-->

                </LinearLayout>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_xemthem"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="6sp"
        android:paddingTop="6sp"
        android:visibility="visible"
        android:layout_marginBottom="2sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/lnaddrm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lnaddrm">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xem thêm sản phẩm"
            android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lngia"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="6sp"
        android:paddingTop="6sp"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/lnaddrm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lnaddrm">

        <TextView
            android:layout_width="20sp"
            android:id="@+id/tv_soluongsp"
            android:layout_height="20sp"
            android:text="2 sản phẩm"
            android:textSize="12sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textViewol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:typeface="serif"
            android:text="Thành tiền: "
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_thanhtien"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:typeface="serif"
            android:text="đ 20.000"
            android:layout_marginEnd="20sp"
            android:textSize="14dp"
            android:textColor="#FF0303" />


    </LinearLayout>

</LinearLayout>