<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:background="#dddaaf"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:padding="6sp"
        android:background="#FFFFFF"
        android:id="@+id/ln_product"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginBottom="2sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lngia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_gravity="center"
                        android:contentDescription="here"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/bovuong">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="85sp"
                            android:layout_height="85sp"
                            android:layout_gravity="center"
                            android:contentDescription="here"
                            android:paddingLeft="2dp"
                            android:scaleType="fitCenter"
                            android:paddingRight="2dp"
                            android:src="@drawable/butchi12mau" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginEnd="10sp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">



                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:layout_marginStart="5dp"
                            android:text="Xà bông sinh học Giảm mụn lưng"
                            android:typeface="serif"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:padding="3sp"
                            android:paddingTop="2dp"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:layout_marginStart="5dp"
                            android:text="x1"
                            android:layout_gravity="end"
                            android:typeface="serif"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name">

                            <TextView
                                android:id="@+id/tv_price_old"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:foreground="@drawable/strikethrough"
                                android:text="32.000 đ"
                                android:textColor="#A6A1A1"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:text="18.000 đ"
                                android:gravity="end"
                                android:textColor="#FF0000"
                                android:textSize="13dp" />


                        </LinearLayout>







                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>